<Window x:Class="DynamicReconfigureTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic Reconfigure #" Height="200" Width="300" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ComboBox Name="TargetBox" Grid.Row="0" SelectionChanged="TargetBox_OnSelectionChanged" SelectedIndex="0" VerticalContentAlignment="Bottom" />
        <Grid Name="PageContainer" Grid.Row="1" />
        <Label Name="ConnecitonLabel" Grid.Row="2" >Not connected..</Label>
    </Grid>
</Window>
